<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProceduresActivity"
    tools:showIn="@layout/activity_procedures">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Steps to Export Goods"
            android:textAlignment="center"
            android:textColor="#B22222"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Step 1: Enquiry"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />



            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/cards"
                android:padding="20dp"
                android:paddingEnd="10dp"
                android:text="a)Size details - Std. or oversize or undersize\n
b)Drawing, if available\n
c)Sample, if possible\n
d)Quantity required\n
e)Delivery schedule\n
f)Mode of Dispatch - Sea, air or Sea/air\n
g)Mode of Packing"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Step 2: Proforma generation"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />




        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="After studying the enquiry in detail, the exporter - be it Manufacturer Exporter or Merchant Exporter - will provide a Proforma Invoice to the Buyer."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Step 3: Order placement"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="If the offer is acceptable to the Buyer in terms of price, delivery and payment terms, the Buyer will then place an order on the Exporter, giving as much data as possible in terms of specifications, Part No. Quantity etc. (No standard format is required for such a purchase order)"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Step 4: Order acceptance"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="It is advisable that the Exporter immediately acknowledges receipt of the order, giving a schedule for the delivery committed."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 5: Goods readiness and documentation"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="Once the goods are ready duly packed in Export worthy cases/cartons (depending upon the mode of despatch), the Invoice is prepared by the Exporter.\n
If the number of packages is more than one, a packing list is a must.
"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 6: Goods removal from works :"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="There are different procedures for removing Export consignments to the Port, following the AR4 procedure, but it would be advisable to get the consignment sealed by the Central Excise authorities at the factory premises itself, so that open inspection by Customs authorities at the Port can be avoided."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 7: : Documents for C and F agent :"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="The Exporter is expected to provide the following documents to the Clearing and Forwarding Agents, who are entrusted with the task of shipping the consignments, either by air or by sea.\n
Invoice\n
Packing List\n
Declaration in Form SDF (to meet the requirements as per FERA) in duplicate."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 8: Customs Clearance"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="After assessment of the shipping bill and examination of the cargo by Customs (where required), the export consignments are permitted by Customs for ultimate Export. This is what the concerned Customs officials call the ‘LET EXPORT’ endorsement on the shipping bill."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 9:  Document Forwarding"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="After completing the shipment formalities, the C and F Agents are expected to forward to the Exporter the following documents:\n
Customs signed Export Invoice and Packing List\n
Duplicate of Form SDF\n
Exchange control copy of the Shipping Bill, processed electronically\n
AR4 (original duplicate) duly endorsed by Customs for having effected the Export\n
Bill of Lading or Airway bill, as the case may be."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 10:  Bills negotiation"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="With these authenticated shipping documents, the Exporter will have to negotiate the relevant export bill through authorized dealers of Reserve Bank, viz., Banks.
\nUnder the Generalized System of Preference, imports from developing countries enjoy certain duty concessions, for which the exporters in the developing countries are expected to furnish the GSP Certificate of Origin to the Bankers, along with other shipping documents.
\nBroadly, payment terms can be:
\nDocuments against Payment (DP)
\nDocuments against Acceptance (DA) "
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 11: Bank to bank documents forwarding"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="The negotiating Bank will scrutinize the shipping documents and forward them to the Banker of the importer, to enable him clear the consignment.
It is expected of such authorized dealers of Reserve Bank to ensure receipt of export proceeds, which factor has to be intimated to the Reserve Bank by means of periodical Returns."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 12: Customs obligation discharge"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="As indicated above, Exporters are also expected to provide proof of export to the Central Excise authorities, on the basis of the Customs endorsements made on the reverse of AR4s and get their obligation, on this score, discharged."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Steps 13: Receipt of Bank certificate"
            android:textAlignment="textStart"
            android:textColor="#008000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cards"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:text="Authorized dealers will issue Bank Certificates to the exporter, once the payment is received and only with the issuance of the Bank Certificate, the export transaction becomes complete."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>
    </ScrollView>

</android.support.v4.widget.NestedScrollView>